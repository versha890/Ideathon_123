<style>
    *{
        margin: 0;
        padding: 0;
    }
    video{
        width: 100vw;
        height: 90vh;
        object-fit: cover;
        display: block;
        margin: 0 auto;
        border: 2px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
/* Container for the flashcard */
.flashcard-container {
    display: flex;
    padding: 20px 50px;
    gap: 6vw;
    row-gap: 50px;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    width: 100vw;
    background-color: #0a4a16;
}

.flashcard {
    width: 250px;
    height: 300px;
    position: relative;
    transform-style: preserve-3d; /* Enable 3D effect */
    transition: transform 0.6s; /* Smooth transition for flip effect */
}

/* Flip on hover */
.flashcard:hover {
    transform: rotateY(180deg); /* Rotate the card to flip it */
}

/* Front of the card */
.flashcard-front,
.flashcard-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden; /* Hide the back side when flipped */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-radius: 10px;
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.15);
}

/* Style for the front (image) */
.flashcard-front img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Ensures the image covers the card */
    border-radius: 10px;
}

/* Style for the back (content) */
.flashcard-back {
    background-color: #ffffff;
    padding: 20px;
    text-align: center;
    border-radius: 10px;
    color: #333;
    font-family: Arial, sans-serif;
    transform: rotateY(180deg); /* Flip the back side initially */
}

.flashcard-back h3 {
    font-size: 1.2rem;
    margin-bottom: 10px;
}

.flashcard-back p {
    font-size: 1rem;
}
.flashcard h3{
    font-weight: 900;
}

</style>
