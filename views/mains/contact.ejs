<% layout("/layout/boilerplate")%>
<div class="contact_container2">
<div class="contact-container">
    <h1>Contact Us</h1>
    <form action="/submit" method="POST" class="contact-form">
        <div class="form-group">
            <label for="name" class="formtext">Full Name</label>
            <input type="text" 
            id="name" 
            name="user[name]" 
            placeholder="Enter your name" 
            required>
        </div>
        <div class="form-group">
            <label for="email" class="formtext">Email Address</label>
            <input type="email" 
            id="email" 
            name="user[email]" 
            placeholder="Enter your email" 
            required>
        </div>
        <div class="form-group">
            <label for="pincode" class="formtext">Pincode</label>
            <input type="number" 
            id="pincode" 
            name="user[pincode]" 
            placeholder="Enter your pincode" 
            min="100000" 
            max="999999"
            oninput="if(this.value.length>6) this.value = this.value.slice(0,6);"
            required >
        </div>
        <div class="form-group">
            <label for="message" class="formtext">message</label>
            <textarea id="message" name="user[message]" rows="5" placeholder="Your message" required></textarea>
        </div>
        <button type="submit" class="submit-btn">Submit</button>
    </form>
</div>
</div>
<style>
    .formtext{
        color: whitesmoke !important;
    }
</style>
